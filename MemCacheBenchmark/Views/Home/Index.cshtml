@model MemCacheBenchmark.Models.BenchmarkModel
@{
    Layout = null;
}

<!DOCTYPE html>
<script src="/scripts/jquery-1.9.1.min.js"></script>
<script src="/scripts/bootstrap.min.js"></script>

<link href="/Content/bootstrap.min.css" rel="stylesheet" />
<link href="/Styles/Index.css" rel="stylesheet" />

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Redis Benchmark</title>
    <script type="text/javascript" src="~/scripts/views/index.js"></script>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>
                Redis Cache Benchmark
            </h1>
        </div>
        <div class="content col-xs-10 col-xs-offset-1">
            <ul class="nav nav-pills">
                <li class="active"><a data-toggle="pill" href="#home">Settings</a></li>
                <li><a data-toggle="pill" href="#log">Log</a></li>
                <li><a data-toggle="pill" href="#results">Results</a></li class=""col-xs-4"">
            </ul>
            <div class="tab-content">
                <div id="home" class="tab-pane fade in active">
                    <form id="benchmarkConfigurationForm" role="form">
                        <div class="form-group col-xs-5">
                            <label for="objects">Number of objects:</label>
                            <input name="objNum" type="text" class="form-control">
                        </div>
                        <div class="form-group col-xs-5 col-xs-offset-2">
                            <label for="queries">Number of queries:</label>
                            <input name="objQueries" type="text" class="form-control">
                        </div>

                        <div class="form-group col-xs-5">
                            <label for="minDepth">Minimum object depth:</label>
                            <input name="minObjDepth" type="text" class="form-control">
                        </div>
                        <div class="form-group col-xs-5 col-xs-offset-2">
                            <label for="maxDepth">Maximum object depth:</label>
                            <input name="maxObjDepth" type="text" class="form-control">
                        </div>

                        <div class="form-group col-xs-5">
                            <label for="minScope">Minimum object scope:</label>
                            <input name="minObjScope" type="text" class="form-control">
                        </div>
                        <div class="form-group col-xs-5 col-xs-offset-2">
                            <label for="maxScope">Maximum object scope:</label>
                            <input name="maxObjScope" type="text" class="form-control">
                        </div>
                        <button type="reset" class="btn btn-default">Clear</button>
                        <button type="submit" class="btn btn-default">Start</button>
                    </form>
                </div>
                <div id="log" class="tab-pane fade">
                    <h3>Log</h3>
                    <p id="logConsole"></p>
                </div>
                <div id="results" class="tab-pane fade">
                    <h3>Results</h3>
                    <p>Please launch a benchmark test to view test results...</p>
                </div>

            </div>
        </div>
    </div>
</body>
</html>
